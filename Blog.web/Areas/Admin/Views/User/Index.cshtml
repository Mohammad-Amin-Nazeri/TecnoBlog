@model Blog.CoreLayer.DTOs.Users.UserFilterDto
@{
    ViewData["Title"] = "مدیریت کاربران";
    ViewData["selected"] = "users";
    var counter = 1;
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<section class="content-header">
    <h1>
        @ViewData["title"]
    </h1>

    <ol class="breadcrumb">
        <li>
            <a asp-area="Admin" asp-controller="Home" asp-action="Index">
                <i class="fa fa-dashboard"></i> خانه
            </a>
        </li>
        <li class="active">@ViewData["Title"]</li>
    </ol>
</section>
<section class="content">
    <div class="box box-primary ">
        <div class="box-body p-0">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>نام کاربری</th>
                        <th>نام و نام خانوادگی</th>
                        <th>نقش</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Users)
                    {
                        <tr>
                            <td>@counter</td>
                            <td>@item.UserName</td>
                            <td>@item.FullName</td>
                            <td>
                                @item.Role.ToString()
                            </td>
                            <td>
                                <a style="margin-bottom: 5px" class=" float-left btn btn-sucsses btn-button" onclick="OpenModal(`/admin/user/ShowEditModal?userId=${@item.UserId}` , 'default_Modal','ویرایش کاربر')">ویرایش</a>
                                
                            </td>
                        </tr>
                        counter += 1;
                    }
                </tbody>
            </table>
        </div>
        <partial name="_Pagination" model="Model"/>
    </div>
</section>